{
  "name": "@samuelho-dev/monorepo-library-generator",
  "version": "1.5.2",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "license": "MIT",
  "description": "Effect-based monorepo library generator with Nx integration. Generate contract, data-access, feature, infra, and provider libraries following Effect best practices.",
  "keywords": [
    "effect",
    "nx",
    "generator",
    "monorepo",
    "scaffold",
    "typescript",
    "effect-ts",
    "library-generator",
    "code-generator",
    "nx-generator"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samuelho-dev/monorepo-library-generator.git"
  },
  "bugs": {
    "url": "https://github.com/samuelho-dev/monorepo-library-generator/issues"
  },
  "homepage": "https://github.com/samuelho-dev/monorepo-library-generator#readme",
  "author": "Samuel Ho <samuelho-dev>",
  "bin": {
    "mlg": "bin/cli.mjs",
    "mlg-mcp": "bin/mcp-server.mjs"
  },
  "generators": "./src/generators.json",
  "publishConfig": {
    "access": "public",
    "directory": "dist",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "codegen": "build-utils prepare-v3",
    "prebuild": "rm -rf .tsbuildinfo dist build && node scripts/generate-version.mjs",
    "build": "pnpm build-esm && pnpm build-add-extensions && pnpm build-annotate && pnpm build-cjs && node scripts/post-build.mjs && node scripts/bundle-cli.mjs && node scripts/bundle-mcp.mjs",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-add-extensions": "babel build/esm --plugins babel-plugin-add-import-extension --out-dir build/esm --source-maps --no-babelrc",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "lint": "eslint \"**/{src,test,examples,scripts,dtslint}/**/*.{ts,mjs}\"",
    "lint-fix": "pnpm lint --fix",
    "test": "vitest",
    "test:ci": "vitest run --config vitest.config.ci.ts",
    "test:generators": "vitest run src/**/*.spec.ts --config vitest.config.ci.ts",
    "test:mcp": "vitest run test/mcp/**/*.spec.ts",
    "test:watch": "vitest --watch",
    "coverage": "vitest --coverage",
    "mcp:dev": "tsx src/mcp/server.ts",
    "mcp:inspector": "pnpm build && npx @modelcontextprotocol/inspector node build/esm/mcp/server.js",
    "gen:provider": "pnpm build && nx g ./dist/src/generators.json:provider",
    "gen:data-access": "pnpm build && nx g ./dist/src/generators.json:data-access",
    "gen:feature": "pnpm build && nx g ./dist/src/generators.json:feature",
    "gen:infra": "pnpm build && nx g ./dist/src/generators.json:infra",
    "gen:contract": "pnpm build && nx g ./dist/src/generators.json:contract",
    "verify:lint": "pnpm lint 2>&1 | grep -E '^/' | wc -l",
    "changeset-version": "changeset version && node scripts/version.mjs",
    "changeset-publish": "pnpm build && TEST_DIST= pnpm test:ci && changeset publish"
  },
  "dependencies": {
    "@effect/ai": "^0.32.1",
    "@effect/cli": "^0.72.1",
    "@effect/platform": "^0.93.6",
    "@effect/platform-node": "^0.100.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "effect": "^3.19.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-export-namespace-from": "^7.24.7",
    "@babel/plugin-transform-modules-commonjs": "^7.24.8",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.8",
    "@effect/build-utils": "^0.8.9",
    "@effect/eslint-plugin": "^0.3.2",
    "@effect/language-service": "latest",
    "@effect/vitest": "^0.27.0",
    "@eslint/compat": "1.1.1",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.10.0",
    "@nx/devkit": "^22.1.3",
    "@types/node": "^22.5.2",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "babel-plugin-add-import-extension": "^1.6.0",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-codegen": "^0.28.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "nx": "^22.1.3",
    "tsx": "^4.17.0",
    "typescript": "^5.6.2",
    "vitest": "^4.0.15"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ],
      "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/test/**",
        "**/.direnv/**",
        "**/node_modules/**"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ],
      "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/test/**",
        "**/.direnv/**",
        "**/node_modules/**"
      ]
    }
  },
  "pnpm": {
    "patchedDependencies": {
      "@changesets/get-github-info@0.6.0": "patches/@changesets__get-github-info@0.6.0.patch"
    }
  }
}
