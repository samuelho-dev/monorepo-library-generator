{
  "extends": "./tsconfig.base.json",
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts", "src/dotfiles/**/*"],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/esm",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": false,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
